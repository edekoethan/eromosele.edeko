---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects Header</div>
  </div>

  <HorizontalCard
     title="Hospital Readmissions Prediction"
    img="/hospital_image.png"
    desc="Hospital Readmissions Prediction Project using Machine Learning techniques to predict patient readmissions."
    url="#https://github.com/edekoethan/Hospital_readmissions-"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
   title="Extempo Plus"
    img="/extempo_plus_image.png"
    desc="Extempo Plus is a web-based application designed to assist users in managing their time and tasks more effectively."
    url="https://edekoethan.github.io/extempo-plus/"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Projects Header</div>
  </div>

  <HorizontalCard
     title="School Files MSC Data Science"
    img="/school_github_image.png"
    desc="School Files MSC Data Science is a collection of academic materials and resources for students pursuing a Master's degree in Data Science."
    url="https://github.com/edekoethan/School_Files_MSC_Data_Science"
    badge="FOSS"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Monty Web Framework"
    img="/monty_image.png"
    desc="Monty is a lightweight web framework for building fast and scalable web applications in Rust."
    url="https://github.com/edekoethan/monty"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Printf"
    img="/printf_image.png"
    desc="Printf is a simple and lightweight library for formatted output in Rust."
    url="https://github.com/edekoethan/printf"
  />
</BaseLayout>
